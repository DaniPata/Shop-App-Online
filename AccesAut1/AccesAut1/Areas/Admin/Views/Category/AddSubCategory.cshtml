
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model AccesAut1.Models.Category

<section class="content-header">
    <h1>
        Add Sub Category
    </h1>

</section>

<section class="content">

    <div class="row">
        <div class="col-12">
            <div class="box box-primary">
                
                <!-- /.box-header -->
                <!-- form start -->
                <form method="post" asp-area="admin" asp-controller="category" asp-action="addsubcategory" asp-route-id="@Model.ParentCategoryId" >
                    <div class="box-body">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" asp-for="Name" required="required">
                        </div>

                   
                        <!-- /.box-body -->

                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <input type="hidden" asp-for="ParentCategoryId" />
                        </div>
                    </div>
                </form>
            </div>

        </div>

    </div>

  
</section>
