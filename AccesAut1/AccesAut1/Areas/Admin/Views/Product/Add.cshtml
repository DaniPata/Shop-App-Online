
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model AccesAut1.Areas.Admin.Models.ViewModels.ProductViewModel

<section class="content-header">
    <h1>
        Add New Product
    </h1>

</section>

<section class="content">

    <div class="row">
        <div class="col-12">
            <div class="box box-primary">

                <!-- /.box-header -->
                <!-- form start -->
                <form method="post" asp-area="admin" asp-controller="product" asp-action="add">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" asp-for="Product.ProductName" required="required">
                        </div>
                        <div class="form-group">
                            <label for="name">Description</label>
                            <input type="text" class="form-control" asp-for="Product.Description" required="required">
                        </div>

                        <div class="form-group">
                            <label for="name">Price</label>
                            <input type="text" class="form-control" asp-for="Product.Price" required="required">
                        </div>
                        @*<div class="form-group">
            <label for="exampleInputFile">Photo</label>
            <input id="exampleInputFile" type="file" name="photo" accept="image/*">
        </div>*@

                        <div class="form-group">
                            <label for="exampleInputFile">Photo</label>
                            <input type="file" class="form-control" asp-for="Product.Photo" accept="image/*" required="required">
                        </div>


                        <div class="form-group">
                            <label for="name">Quantity</label>
                            <input type="text" class="form-control" asp-for="Product.Quantity" required="required">
                        </div>
                        <div class="form-group">
                            <label for="name">Brand</label>
                            <input type="text" class="form-control" asp-for="Product.Brand" required="required">
                        </div>
                        <div class="form-group">
                            <label>Supplier</label>
                            <select asp-for="Product.SupplierId" asp-items="@Model.Suppliers"
                                    class="form-control">
                            </select>
                        </div>

                        <div class="form-group">
                            <label>Category</label>
                            <select asp-for="Product.CategoryId" asp-items="@Model.Categories"
                                    class="form-control">
                            </select>
                        </div>



                        <!-- /.box-body -->

                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </div>
</form>
            </div>

        </div>

    </div>

</section>
